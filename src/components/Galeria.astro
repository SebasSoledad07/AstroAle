---
const fotos = [
  '/images/foto1.jpg',
  '/images/foto2.png',
  '/images/foto3.jpg',
  '/images/foto4.jpg',
  '/images/foto5.jpg',
  '/images/foto6.jpg',
];
---
<section class="py-8 px-4">
    <div class="max-w-5xl mx-auto">
      <h2 class="text-2xl md:text-3xl font-semibold text-center text-purple-800 mb-8">
        Nuestros Momentos Especiales
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {fotos.map((src, index) => (
          <div class="overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:scale-105">
            <img 
              src={src}
              alt={`Nuestra foto ${index + 1}`}
              class="w-full h-64 object-cover object-center"
            />
          </div>
        ))}
      </div>
    </div>
  </section>