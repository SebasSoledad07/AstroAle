<section class="flex items-center justify-center bg-gradient-to-br from-pink-50 to-purple-100 px-4">
    <div class="max-w-4xl w-full bg-white/80 backdrop-blur-sm rounded-xl shadow-xl p-6">
      <h2 class="text-2xl font-semibold text-center text-purple-800 mb-6">
        Hemos estado juntos por:
      </h2>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 text-center">
        <div class="bg-pink-100 rounded-lg p-4">
          <div id="años" class="text-3xl md:text-5xl font-bold text-pink-600">0</div>
          <div class="text-purple-700">Años</div>
        </div>
        <div class="bg-pink-100 rounded-lg p-4">
          <div id="meses" class="text-3xl md:text-5xl font-bold text-pink-600">0</div>
          <div class="text-purple-700">Meses</div>
        </div>
        <div class="bg-pink-100 rounded-lg p-4">
          <div id="dias" class="text-3xl md:text-5xl font-bold text-pink-600">0</div>
          <div class="text-purple-700">Días</div>
        </div>
        <div class="bg-pink-100 rounded-lg p-4">
          <div id="hours" class="text-3xl md:text-5xl font-bold text-pink-600">0</div>
          <div class="text-purple-700">Horas</div>
        </div>
        <div class="bg-pink-100 rounded-lg p-4">
          <div id="minutes" class="text-3xl md:text-5xl font-bold text-pink-600">0</div>
          <div class="text-purple-700">Minutos</div>
        </div>
        <div class="bg-pink-100 rounded-lg p-4 col-span-2 sm:col-span-1 md:col-span-1">
          <div id="seconds" class="text-3xl md:text-5xl font-bold text-pink-600">0</div>
          <div class="text-purple-700">Segundos</div>
        </div>
      </div>
    </div>
  </section>
<style>
   
