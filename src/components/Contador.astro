        <script>
            function updateCounter() {
                const now = new Date();
                const diff = now.getTime() - new Date("2022-01-09").getTime();
                const años = Math.floor(diff / (1000 * 60 * 60 * 24 * 365));
                const meses = Math.floor(
                    (diff % (1000 * 60 * 60 * 24 * 365)) /
                        (1000 * 60 * 60 * 24 * 30),
                );
               
                const days = Math.floor(diff / (1000 * 60 * 60 * 24));
                const hours = Math.floor(
                    (diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60),
                );
                const minutes = Math.floor(
                    (diff % (1000 * 60 * 60)) / (1000 * 60),
                );
                const seconds = Math.floor((diff % (1000 * 60)) / 1000);
                const añosElement = document.getElementById("años");
                if (añosElement) añosElement.innerText = años.toString();
                const mesesElement = document.getElementById("meses");
                if (mesesElement) mesesElement.innerText = meses.toString();
            

                const secondsElement = document.getElementById("seconds");
                if (secondsElement)
                    secondsElement.innerText = (seconds % 60).toString();

                const minutesElement = document.getElementById("minutes");
                if (minutesElement)
                    minutesElement.innerText = (minutes % 60).toString();

                const hoursElement = document.getElementById("hours");
                if (hoursElement)
                    hoursElement.innerText = (hours % 24).toString();

                const daysElement = document.getElementById("dias");
                if (daysElement) daysElement.innerText = days.toString();
            }

            setInterval(updateCounter, 1000);
        </script>
    </section>
</section>
